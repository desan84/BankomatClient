<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите старый пароль"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="67dp"/>
    <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOldPin"
            android:background="#ffffff"
            android:layout_alignRight="@+id/textView" android:layout_alignParentTop="true"
            android:layout_marginTop="93dp" android:layout_alignLeft="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите новый пароль"
            android:id="@+id/textView1" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="129dp" android:layout_alignRight="@+id/textView"
            android:layout_alignLeft="@+id/textView"/>
    <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOldPin"
            android:background="#ffffff"
            android:layout_alignRight="@+id/textView" android:layout_alignParentTop="true"
            android:layout_marginTop="163dp" android:layout_alignLeft="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ок"
            android:id="@+id/button"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="205dp"/>
</RelativeLayout>